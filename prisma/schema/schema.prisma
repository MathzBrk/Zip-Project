generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:../../data/dev.db"
}

model Usuario {
  id         String    @id @default(uuid())
  nome       String
  email      String    @unique
  senha      String
  endereco   Enderecos @relation(fields: [enderecoId], references: [id])
  enderecoId String    @unique
}

model Enderecos {
  id      String   @id @default(uuid())
  rua     String
  numero  String
  cidade  String
  usuario Usuario?
}

model Pedidos {
  id               String            @id @default(uuid())
  valor            Int
  formaDePagamento FormasDePagamento
  clientName       String
  data             DateTime          @default(now())
}

model Produtos {
  id                String @id @default(uuid())
  nome              String
  preco             Int
  quantidadeEstoque Int
}

enum FormasDePagamento {
  PIX
  DINHEIRO
  CREDITO
  DEBITO
}
